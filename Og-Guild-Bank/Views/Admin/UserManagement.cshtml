@model IEnumerable<IdentityUser>

<div class="col-md-8 offset-md-2">
    <div class="card bg-dark text-white pt">
        <div class="card-header text-center">
            <h2>User Management</h2>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <tr><td colspan="3" class="text-center text-white">No User Accounts</td></tr>
            }
            else
            {
                <table class="table table-sm table-bordered text-white" header header-content="User Management">
                    <tr>
                        <th>User ID</th>
                        <th>User name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                    @foreach (IdentityUser user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                                    <a class="btn btn-sm btn-primary" asp-action="EditUser"
                                       asp-route-id="@user.Id">Edit</a>
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');" class="btn btn-sm btn-danger">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </table>
            }
            <a class="btn btn-primary" asp-action="AddUser">Add new user</a>
        </div>
    </div>
</div>