@model Application
    
<div class="col-xl-6 offset-xl-3 col-lg-8 offset-lg-2 col-md-8 offset-md-2">
    <div class="card bg-dark">
        <div class="card-header text-center">
            <h2>&ltOG&gt Application</h2>
        </div>
        <div class="card-body">
            <form id="application" method="post">
                @*<div class="form-label-group">
                    <input type="text" id="name" class="form-control" placeholder="name" />
                    <label for="name">Character Name</label>
                </div>*@
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-label-group col-lg-6">
                        <input id="name" type="text" asp-for="@Model.CharacterName" class="form-control form-control-lg pl-2" placeholder=" " />
                        <label for="name" asp-for="@Model.CharacterName">Character Name</label>
                        <span asp-validation-for="@Model.CharacterName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-label-group col-lg-2 col-sm-6">
                        @Html.DropDownListFor(m => m.Level, Model.LevelList, "Level", new { @class = "form-control" })
                        <span asp-validation-for="@Model.Level" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-2 col-sm-6">
                        @Html.DropDownListFor(m => m.Race, Model.RaceList, "Race", new { @class = "form-control" })
                        <span asp-validation-for="@Model.Race" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-2 col-sm-6">
                        @Html.DropDownListFor(m => m.Class, Model.ClassList, "Class", new { @class = "form-control" })
                        <span asp-validation-for="@Model.Class" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6 col-sm-6">
                        <input asp-for="@Model.Specialization" placeholder="Class Spec" class="form-control" />
                        <span asp-validation-for="@Model.Specialization" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>